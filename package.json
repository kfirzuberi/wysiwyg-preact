{
  "private": true,
  "name": "preact-wysiwyg-sandbox",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-jest": "^24.9.0",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-preact": "^2.0.0",
    "chai": "^4.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.1.0",
    "eslint": "^6.5.1",
    "eslint-config-synacor": "^3.0.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "jest-transform-css": "^2.0.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^2.2.1",
    "preact-render-spy": "^1.3.0"
  },
  "dependencies": {
    "preact": "^10.0.0",
    "preact-compat": "^3.19.0",
    "preact-render-to-string": "^5.0.6",
    "preact-router": "^3.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "setupFiles": [
      "./tests/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./tests/__mocks__/fileMock.js",
      "\\.(css|less|scss|sss|styl)$": "identity-obj-proxy",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest",
      "\\.(css|less|scss|sss|styl)$": "jest-transform-css"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "less"
    ]
  },
  "babel": {
    "presets": [
      "preact"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
